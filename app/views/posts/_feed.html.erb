<div class="column is-half is-offset-one-quarter">
  <% if user_signed_in? %>
	  <article class="media box">
	  	<figure class="media-left">
	  		<p class="image is-64x64">
	  			<img src="https://bulma.io/images/placeholders/128x128.png">
	  		</p>
	  	</figure>
	  	<div class="media-content">
	  		 <%= render "posts/form" %>
	  	</div>
	  </article>
  <% end %>
  <% @posts.each do | post |%>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <% if user_signed_in? %>
              <p><%= post.user.username %></p>
            <% else %>
              <p>Anon</p>
            <% end %>
            <p>
              <strong><%= post.title %>: </strong>
              <%= post.body %>
            </p>
          </div>
          
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to post, class: "level-item" do%>
                <span class="icon"><%= fa_icon "link" %></span>
              <% end %>
            <% if user_signed_in? && current_user.id == post.user.id %>
              <%= link_to edit_post_path(post), class: "level-item" do%>
                <span class="icon"><%= fa_icon "pencil" %></span>
              <% end %>
              <%= link_to post, method: :delete, class: "level-item",
                  data: { confirm: "Are you sure you want to delete this post?"} do%>
                <span class="icon"><%= fa_icon "trash-o" %></span>
              <% end %>
            <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
              
            
            